<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Connexion</title>

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet"/>
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.0/mdb.min.css" rel="stylesheet"/>

    <style>
        .divider:after,
        .divider:before {
            content: "";
            flex: 1;
            height: 1px;
            background: #eee;
        }
        .h-custom {
            height: calc(100% - 73px);
        }
        @media (max-width: 450px) {
            .h-custom {
                height: 100%;
            }
        }
        body {
            overflow: hidden;
        }
        .password-toggle-icon {
            position: absolute;
            top: 50%;
            right: 1rem;
            transform: translateY(-50%);
            cursor: pointer;
        }
        .text-white a:hover {
            color: #f8f9fa;
            text-decoration: underline;
        }

        h4 {
            text-align: center;
            color: #2073cb; 
            margin-bottom: 40px; 
        }

    </style>
</head>
<body>
    <section class="vh-100">
        <div class="container-fluid h-custom">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-9 col-lg-6 col-xl-6">
                    <img src="./images/background.jpg" class="img-fluid" alt="Image de fond">
                </div>
                <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                    <form id="loginForm">
                        <h4>Bienvenue dans la gestion des absences d'Ahmed</h4>
                        
                        <!-- Entrée de l'adresse e-mail -->
                        <div class="form-outline mb-4">
                            <input type="email" id="form3Example3" class="form-control form-control-lg"
                                placeholder="Entrez une adresse e-mail valide" />
                            <label class="form-label" for="form3Example3">Adresse e-mail</label>
                        </div>
                      
                        <!-- Entrée du mot de passe -->
                        <div class="form-outline mb-3">
                            <input type="password" id="form3Example4" class="form-control form-control-lg"
                                placeholder="Entrez le mot de passe" />
                            <label class="form-label" for="form3Example4">Mot de passe</label>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <!-- Case à cocher -->
                            <div class="form-check mb-0">
                                <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                                <label class="form-check-label" for="form2Example3">
                                    Se souvenir de moi
                                </label>
                            </div>
                            <a href="#!" class="text-body">Mot de passe oublié ?</a>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg" style="padding-left: 2.5rem; padding-right: 2.5rem;">Connexion</button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">Vous n'avez pas de compte ? <a href="/sign-up" class="link-danger">S'inscrire</a></p>
                      </form>
                </div>
            </div>
        </div>
        <div class="d-flex flex-column flex-md-row text-center text-md-start justify-content-between py-4 px-4 px-xl-5 bg-primary">
            <div class="text-white mb-3 mb-md-0">
                &copy; 2023. Tous droits réservés. | Développé par <a href="http://elhassaniomar.c1.biz" class="text-white">Omar EL HASSANI</a>
            </div>
        </div>
    </section>

    <!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.0/mdb.min.js"></script>

    <script>
        // Toggle password visibility
        const passwordInput = document.getElementById('form3Example4');
        const passwordToggleIcon = document.querySelector('.password-toggle-icon');

        passwordToggleIcon.addEventListener('click', () => {
            const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordInput.setAttribute('type', type);

            // Change icon based on visibility state
            if (type === 'password') {
                passwordToggleIcon.classList.add('fa-eye-slash');
                passwordToggleIcon.classList.remove('fa-eye');
            } else {
                passwordToggleIcon.classList.add('fa-eye');
                passwordToggleIcon.classList.remove('fa-eye-slash');
            }
        });
    </script>
    <script>
      // Function to handle user login
async function loginUser(event) {
  event.preventDefault(); // Prevent form submission

  const email = document.getElementById('form3Example3').value;
  const password = document.getElementById('form3Example4').value;

  // Prepare the login data to be sent in the request body
  const loginData = {
    email: email, // Use 'email' instead of 'username'
    password: password,
  };

  try {
    const response = await fetch('/auth/login', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(loginData),
    });

    if (response.ok) {
      // Successful login
      const data = await response.json();
      const role = data.role;
      console.log('Received role:', role);
      
      if (role == 0) {
        // Redirect to the admin dashboard page
        console.log('Navigating to dashboard...');
        window.location.href = '/';
      } else if (role == 1) {
        // Redirect to the formateur page (adjust the URL if needed)
        console.log('Navigating to formateur-page...');
        window.location.href = '/';
      } else {
        // Handle other roles or scenarios
      }
    } else {
      // Failed login
      alert('Invalid email or password. Please try again.');
    }
    } catch (error) {
        console.error('Error occurred during login:', error);
    }
    }

    // Add an event listener to the login form
    document.getElementById('loginForm').addEventListener('submit', loginUser);

    </script>

</body>
</html>
