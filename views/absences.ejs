<!DOCTYPE html>
<html lang="fr">
<%- include('partials/header') %>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <%- include('partials/navbar') %>
        <%- include('partials/aside') %>

        <div class="content-wrapper">
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>Absences des Stagiaires</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Accueil</a></li>
                                <li class="breadcrumb-item active">Absences</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </section>

            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <div id="success-alert" class="alert alert-success" role="alert" style="display: none;">
                                        Absence enregistrée avec succès
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                                    </div>
                                    <div id="delete-success-alert" class="alert alert-success alert-dismissible fade show d-none" role="alert">
                                        Absence supprimée avec succès
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-sm-12 text-right">
                                            <div class="col-auto ms-auto d-print-none">
                                                <div class="d-flex justify-content-end">
                                        
                                                    <!-- The "Nouvelle Absence" button -->
                                                    <a href="#" class="btn btn-primary d-none d-sm-inline-block" data-bs-toggle="modal" data-bs-target="#modal-add-absence" id="new-absence-button">
                                                        Nouvelle Absence
                                                    </a>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <table id="example1" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th class="text-center">Stagiaire</th>
                                                <th class="text-center">Fonction</th>
                                                <th class="text-center">Type d'Absence</th>
                                                <th class="text-center">Total d'Heures Manquées</th>
                                                <th class="text-center">Justifiée</th>
                                                <th class="text-center">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <!-- Replace the below dummy data with actual data from the database -->
                                            <% absences.forEach(absence => { %>
                                                <tr>
                                                    <td class="text-center"><%= absence.stagiaire_id %></td>
                                                    <td class="text-center"><%= absence.observation_date %></td>
                                                    <td class="text-center"><%= absence.absence_type %></td>
                                                    <td class="text-center"><%= absence.total_hours_missed %></td>
                                                    <td class="text-center"><%= absence.is_justified ? 'Oui' : 'Non' %></td>
                                                    <td class="text-center">
                                                        <button class="btn btn-success update-btn" onclick="goToUpdatePage('<%= absence.observation_id %>')">
                                                            <i class="fas fa-edit"></i>
                                                        </button>
                                                        <form id="delete-form-<%= absence.observation_id %>" action="/absence/<%= absence.observation_id %>" method="POST" style="display: inline;">
                                                            <input type="hidden" name="_method" value="DELETE">
                                                            <button class="btn btn-danger delete-btn" onclick="confirmDelete(event, '<%= absence.observation_id %>')" id="delete-button-<%= absence.observation_id %>">
                                                                <i class="fas fa-trash-alt"></i>
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.card-body -->
                            </div>
                            <!-- /.card -->
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.container-fluid -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <%- include('partials/script') %>
    </div>
    <!-- ./wrapper -->

<!--  Modals for Insert and Delete -->
<!-- modal-add-absence.ejs -->
<div class="modal fade" id="modal-add-absence" tabindex="-1" role="dialog" aria-labelledby="modal-add-absence" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-title">Nouvelle Absence</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <form id="create-absence-form" action="/absences" method="POST">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Stagiaire</label>
                        <input type="number" class="form-control" name="stagiaire_id" placeholder="Stagiaire ID" required>
                    </div>
                    <div class="row">
                        <% if(user.role == 0) { %>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Date d'observation</label>
                                <input type="date" class="form-control" name="observation_date" id="observationDate" required>
                            </div>
                        </div>
                        <% }else if(user.role == 1){ %>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Date d'observation</label>
                                    <input type="date" class="form-control" name="observation_date" id="observationDate" disabled required>
                                </div>
                            </div>
                            <% } %>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Type d'absence</label>
                                <select class="form-control" name="absence_type" required>
                                    <option value="" selected disabled>Choisir le type d'absence</option>
                                    <option value="Retared">Retared</option>
                                    <option value="Maladie">Maladie</option>
                                    <option value="Rendez-vous médical">Rendez-vous médical</option>
                                    <option value="Autre">Autre</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Decision</label>
                        <select class="form-control" name="decision" required>
                            <option value="" selected disabled>Choisir la décision</option>
                            <option value="Approved">Approved</option>
                            <option value="Rejected">Rejected</option>
                            <option value="Pending">Pending</option>
                            <option value="Excused">Excused</option>
                        </select>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-lg-6 col-md-6 col-sm-12 mb-3">
                          <label class="form-label">Observation N1</label>
                          <textarea class="form-control" name="observation_n1" placeholder="Observation N1"></textarea>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-12">
                          <label class="form-label">Observation N2</label>
                          <textarea class="form-control" name="observation_n2" placeholder="Observation N2"></textarea>
                        </div>
                    </div>
                    <div class="row d-flex justify-content-between">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label mr-5">1ère séance</label>
                                    <input type="checkbox" class="form-check-input" name="is_justified" value="1" onchange="updateTotalHoursMissed()">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label mr-5">2ème séance</label>
                                    <input type="checkbox" class="form-check-input" name="is_justified" value="1" onchange="updateTotalHoursMissed()">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label mr-5">3ème séance</label>
                                    <input type="checkbox" class="form-check-input" name="is_justified" value="1" onchange="updateTotalHoursMissed()">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label mr-5">4ème séance</label>
                                    <input type="checkbox" class="form-check-input" name="is_justified" value="1" onchange="updateTotalHoursMissed()">
                                </div>
                            </div>
                        </div>
                        
                        
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Total d'heures manquées</label>
                                <input type="number" step="2.5" class="form-control" disabled id="totalHoursMissed" placeholder="Total d'heures manquées">
                            </div>
                        </div>
                    </div>
                    
                    
                    
                    
                    <div class="mb-3">
                        <label class="form-label mr-4 mb-0">Absence justifiée</label>
                        <input type="checkbox" class="form-check-input" name="is_justified" value="1"><br>
                        <small class="description">Cochez cette case si l'absence est justifiée.</small>
                    </div>                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary">Ajouter l'absence</button>
                </div>
            </form>
        </div>
    </div>
</div>



<!-- //seances caluc -->
<script>
    function updateTotalHoursMissed() {
        const checkboxes = document.querySelectorAll('input[name="is_justified"]:checked');
        const totalHoursMissedInput = document.getElementById('totalHoursMissed');
        const hoursMissed = checkboxes.length * 2.5;
        totalHoursMissedInput.value = hoursMissed;
    }
</script>
<!-- //for the to day date  -->
<script>
    // Get the current date in YYYY-MM-DD format
    const today = new Date().toISOString().split('T')[0];
    
    // Set the value of the input to today's date
    document.getElementById('observationDate').value = today;
</script>
