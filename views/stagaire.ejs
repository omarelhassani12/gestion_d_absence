<script>
document.addEventListener('DOMContentLoaded', function () {
    // Add click event listener to all update buttons
    var updateButtons = document.getElementsByClassName('update-btn');
    Array.from(updateButtons).forEach(function (button) {
        button.addEventListener('click', function () {
            var stagiaireId = button.getAttribute('data-id');

            // Fetch the stagiaire data using the ID
            fetch('/stagaire/' + stagiaireId)
                .then(response => response.json())
                .then(data => {
                    // Populate the modal inputs with the fetched data
                    document.getElementById('update-stagiaire-id').value = data.id;
                    document.getElementById('update-cfe').value = data.CFE;
                    document.getElementById('update-firstname').value = data.firstName;
                    document.getElementById('update-lastname').value = data.lastName;
                    document.getElementById('update-groupid').value = data.groupId;
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        });
    });
});

</script>

  
