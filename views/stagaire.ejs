<!DOCTYPE html>
<html lang="en">
<%- include('partials/header') %>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <%- include('partials/navbar') %>
        <%- include('partials/aside') %>

        <div class="content-wrapper">
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>Stagiaires</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Accueil</a></li>
                                <li class="breadcrumb-item active">Stagiaires</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </section>

            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <div class="row">
                                        <div class="col-sm-12 text-right">
                                            <div class="col-auto ms-auto d-print-none">
                                                <div class="d-flex justify-content-between">
                                                    <label for="excel-file" class="btn btn-success d-none d-sm-inline-block">
                                                        Insere list
                                                    </label>
                                                    <input type="file" id="excel-file" accept=".xlsx, .xls" style="display: none" />
                                                    
                                                    <a href="#" class="btn btn-primary d-none d-sm-inline-block" data-bs-toggle="modal" data-bs-target="#modal-report" id="new-stagiaire-button">
                                                        Nouveau Stagiaire
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <table id="example1" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>CFE</th>
                                                <th>Nom</th>
                                                <th>Prénom</th>
                                                <th>N de Groupe</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (stagiaires.length === 0) { %>
                                              <tr>
                                                <td colspan="5" style="text-align:center">No stagiaire records found.</td>
                                              </tr>
                                            <% } else { %>
                                              <% stagiaires.forEach((stagiaire) => { %>
                                                <tr>
                                                  <td><%= stagiaire.CFE %></td>
                                                  <td><%= stagiaire.lastName %></td>
                                                  <td><%= stagiaire.firstName %></td>
                                                  <td><%= stagiaire.groupId != null ? 'group ' + stagiaire.groupId : 'No group' %></td>
                                                  <td>
                                                    <a href="#" class="btn btn-success update-btn" data-bs-toggle="modal" data-bs-target="#modal-update" data-id="<%= stagiaire.id %>">
                                                        <i class="fas fa-edit"></i>
                                                      </a>
                                                    <form id="delete-form-<%= stagiaire.id %>" action="/stagiaires/<%= stagiaire.id %>" method="POST" style="display: inline;">
                                                        <input type="hidden" name="_method" value="DELETE">
                                                        <button class="btn btn-danger delete-btn" onclick="confirmDelete(event, '<%= stagiaire.id %>')">
                                                            <i class="fas fa-trash-alt"></i>
                                                        </button>
                                                    </form>
                                                  </td>
                                                </tr>
                                              <% }) %>
                                            <% } %>
                                          </tbody>
                                    </table>
                                </div>
                                <!-- /.card-body -->
                            </div>
                            <!-- /.card -->
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.container-fluid -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <%- include('partials/script') %>
    </div>
    <!-- ./wrapper -->
    <div class="modal fade" id="modal-report" tabindex="-1" role="dialog" aria-labelledby="modal-report" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal-title">Nouveau Stagiaire</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="create-stagiaire-form" action="/stagiaires" method="POST">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">CFE</label>
                            <input type="text" class="form-control" name="CFE" placeholder="CFE">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Prénom</label>
                            <input type="text" class="form-control" name="firstName" placeholder="Prénom">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Nom</label>
                            <input type="text" class="form-control" name="lastName" placeholder="Nom">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">ID du Groupe</label>
                            <input type="text" class="form-control" name="groupId" placeholder="ID du Groupe">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                        <button type="submit" class="btn btn-primary" id="create-stagiaire-button">Créer Stagiaire</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal update -->
    <div class="modal fade" id="modal-update" tabindex="-1" aria-labelledby="modal-update-label" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal-update-label">Update Stagiaire</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="update-form">
                        <input type="hidden" id="update-stagiaire-id" />
                        <div class="mb-3">
                            <label for="update-cfe" class="form-label">CFE</label>
                            <input type="text" class="form-control" id="update-cfe" required>
                        </div>
                        <div class="mb-3">
                            <label for="update-firstname" class="form-label">First Name</label>
                            <input type="text" class="form-control" id="update-firstname" required>
                        </div>
                        <div class="mb-3">
                            <label for="update-lastname" class="form-label">Last Name</label>
                            <input type="text" class="form-control" id="update-lastname" required>
                        </div>
                        <div class="mb-3">
                            <label for="update-groupid" class="form-label">Group ID</label>
                            <input type="text" class="form-control" id="update-groupid" required>
                        </div>
                    </form>
                </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="update-stagiaire-btn" onclick="updateStagiaire()">Update</button>
                </div>
            </div>
        </div>
    </div>
    
    
    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Supprimer Stagiaire</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Voulez-vous vraiment supprimer ce stagiaire ?
                </div>
                <div class="modal-footer d-flex justify-content-between">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                    <button type="button" class="btn btn-danger">Supprimer</button>
                </div>
            </div>
        </div>
    </div>

    <!-- pour les listes des stgrs -->
    <script>
        document.getElementById('excel-file').addEventListener('change', handleFileUpload);

        function handleFileUpload(event) {
          const file = event.target.files[0];
          const formData = new FormData();
          formData.append('file', file);

          fetch('/stagaire/upload', {
            method: 'POST',
            body: formData
          })
            .then(response => {
              if (response.ok) {
                alert('Stagiaire list uploaded successfully');
                // Refresh the page or perform any additional actions
              } else {
                throw new Error('Stagiaire list upload failed');
              }
            })
            .catch(error => {
              console.error('An error occurred while uploading the stagiaire list:', error);
              alert('An error occurred while uploading the stagiaire list : '+error.message);
            });
        }
    </script>
<!-- JavaScript code -->
<script>

document.addEventListener('DOMContentLoaded', function () {
    // When the "New Stagiaire" button is clicked, show the modal
    document.getElementById('new-stagiaire-button').addEventListener('click', function () {
        const modal = new bootstrap.Modal(document.getElementById('modal-report'));
        modal.show();
    });

    // Handle form submission
    document.getElementById('create-stagiaire-form').addEventListener('submit', async function (event) {
        event.preventDefault(); // Prevent the form from submitting

        try {
            // Get the form data
            const form = document.getElementById('create-stagiaire-form');
            const formData = new FormData(form);

            // Convert FormData to JSON
            const jsonObject = {};
            formData.forEach(function (value, key) {
                jsonObject[key] = value;
            });

            // Send the form data via AJAX
            const response = await fetch('/stagaire/create', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json' // Add the Content-Type header
                },
                body: JSON.stringify(jsonObject)
            });

            const data = await response.json();

            // Handle the response
            if (response.ok && data.success) {
                // Stagiaire created successfully
                alert('Stagiaire created successfully');
                window.location.reload(); // Reload the page
            } else {
                // Error creating stagiaire
                console.error('An error occurred while creating the stagiaire: ' + data.error);
            }
        } catch (error) {
            console.error(error);
            console.error('An error occurred while creating the stagiaire');
        } finally {
            // Remove the modal backdrop and container
            const modalBackdrop = document.querySelector('.modal-backdrop');
            const modalContainer = document.querySelector('.modal');

            if (modalBackdrop) {
                modalBackdrop.parentNode.removeChild(modalBackdrop);
            }

            if (modalContainer) {
                modalContainer.parentNode.removeChild(modalContainer);
            }
        }
    });

    // When the modal is hidden, reset the form
    document.getElementById('modal-report').addEventListener('hidden.bs.modal', function () {
        document.getElementById('create-stagiaire-form').reset();
    });
});




//delete function
    function confirmDelete(event, stagiaireId) {
        event.preventDefault(); // Prevent form submission

        // Get the modal element
        var modal = document.getElementById('exampleModalCenter');

        // Get the buttons in the modal
        var confirmButton = modal.querySelector('.btn-danger');
        var closeButton = modal.querySelector('.btn-secondary');

        // Update the confirm button's click event
        confirmButton.onclick = function() {
            // Perform the delete operation
            fetch(`/stagaire/${stagiaireId}`, {
                method: 'DELETE'
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Stagiaire deleted successfully
                        alert('Stagiaire deleted successfully');
                        window.location.href = window.location.href; // Reload the page
                    } else {
                        // Error deleting stagiaire
                        console.error('An error occurred while deleting the stagiaire: ' + data.error);
                    }
                })
                .catch(error => {
                    console.error(error);
                    console.error('An error occurred while deleting the stagiaire');
                });

            // Close the modal
            $(modal).modal('hide');
        };

        // Show the modal
        $(modal).modal('show');

        // Update the close button's click event
        closeButton.onclick = function() {
            // Close the modal
            $(modal).modal('hide');
        };
    }

</script>

