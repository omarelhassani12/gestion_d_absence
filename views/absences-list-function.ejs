<!DOCTYPE html>
<html lang="fr">
<%- include('partials/header') %>
<head>
    <style>
        .red-eye {
        color: red;
      }
        .green-eye {
        color: green;
      }
    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <%- include('partials/navbar') %>
        <%- include('partials/aside') %>

        <div class="content-wrapper">
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>Absences des Stagiaires</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Accueil</a></li>
                                <li class="breadcrumb-item active">Absences</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </section>

            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <div class="row">
                                        <div class="col-sm-12 text-right">
                                          <div class="col-auto ms-auto d-print-none">
                                            
                                          </div>
                                        </div>
                                    </div>
                                </div>
                            
                                <div class="card-body">
                                  <table id="example1" class="table table-bordered table-striped">
                                    <thead>
                                      <tr>
                                        <th class="text-center">CEF</th>
                                        <th class="text-center">Prenom</th>
                                        <th class="text-center">Nom</th>
                                        <th class="text-center">Total Hours</th>
                                        <th class="text-center">Note/10</th>
                                        <th class="text-center">Function</th>
                                      </tr>
                                    </thead>
                                    <tbody id="tableBody">
                                      <% for (const stagiaire of stagiaires) { %>
                                        <tr>
                                          <td class="text-center"><%= stagiaire.CEF %></td>
                                          <td class="text-center"><%= stagiaire.firstName %></td>
                                          <td class="text-center"><%= stagiaire.lastName %></td>
                                          <td class="text-center"><%= stagiaire.totalHours %></td>
                                          <td class="text-center">
                                            <% 
                                             const commule = stagiaire.totalHours / 5;
                                            const note = 10 - commule
                                             %>
                                            <%= note %></td>
                                          <td class="text-center">
                                            <% if (stagiaire.totalHours >= 2.5 && stagiaire.totalHours < 7.5) { %>
                                              <a href="#" download="./Rapport/Image_005.pdf">1er M.G</a>
                                            <% } else if (stagiaire.totalHours >= 7.5 && stagiaire.totalHours < 15.5) { %>
                                              2eme M.G
                                            <% } else if (stagiaire.totalHours >= 15.5 && stagiaire.totalHours < 17.5) { %>
                                              1er Aver
                                            <% } else if (stagiaire.totalHours >= 17.5 && stagiaire.totalHours < 22.5) { %>
                                              2eme Aver
                                            <% } else if (stagiaire.totalHours >= 22.5 && stagiaire.totalHours < 25.5) { %>
                                              Blame
                                            <% } else if (stagiaire.totalHours >= 27.5 && stagiaire.totalHours < 32.5) { %>
                                              2eme M.G
                                            <% } else if (stagiaire.totalHours >= 32.5 && stagiaire.totalHours < 35.5) { %>
                                              Exclusion
                                            <% } else if (stagiaire.totalHours > 52.5) { %>
                                              Urgent
                                            <% } else { %>
                                              Aucune fonction
                                            <% }; %>
                                          </td>
                                          
                                        </tr>
                                      <% } %>
                                    </tbody>
                                  </table>
                                  
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- /.content -->
        </div>
        
    </div>
    
    <%- include('partials/script') %>
    
    <!-- <script src="/scripts/script.js"></script> -->



    <script>
      // Function to submit the form with selected date and period
      function submitForm() {
        const dateSelect = document.getElementById('dateSelect');
        const periodSelect = document.getElementById('periodSelect');
        const selectedDate = dateSelect.value;
        const selectedPeriod = periodSelect.value;
    
        // Update the form action URL with the selected date and period
        document.getElementById('absenceForm').action = `/absence/absences?date=${selectedDate}&period=${selectedPeriod}`;
    
        // Submit the form
        document.getElementById('absenceForm').submit();
      }
    </script>
    
</body>
        
</html>

